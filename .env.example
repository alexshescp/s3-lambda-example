# JWT secret used to sign and verify access tokens
JWT_SECRET=replace-with-strong-secret
# Comma-separated list of allowed audience values (optional)
JWT_AUDIENCE=your-client-id
# Expected issuer of the JWT token (optional)
JWT_ISSUER=https://accounts.example.com
# Comma-separated list of roles that are permitted to access the API (optional)
ALLOWED_ROLES=admin,editor
# Set to false to allow tokens without role information
REQUIRE_ROLE=true
# AWS region where the API Gateway and Lambda authorizer are deployed
AWS_REGION=us-east-1
# Owning AWS account for the API Gateway deployment (optional, but recommended)
AWS_ACCOUNT_ID=111122223333
# Private S3 bucket that the protected API is allowed to expose
S3_BUCKET_NAME=internal-documents
# Optional key prefix to scope access within the bucket
S3_PREFIX=protected/
